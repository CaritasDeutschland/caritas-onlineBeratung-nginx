/var/log/nginx/*.log {
        su root root
        daily
        dateext
        missingok
        rotate 365
        compress
        delaycompress
        notifemptycat 
        create 644 root root
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}